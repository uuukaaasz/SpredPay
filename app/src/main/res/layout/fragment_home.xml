<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MerchantHomeFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_transparent_layout">

    <TextView
        android:id="@+id/home_totalBalanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Total balance"
        android:textColor="#858585"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/home_totalBalanceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_totalBalanceTextView"
        android:layout_marginStart="16dp"
        android:text="7 280.75 €"
        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/home_your_wallets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_totalBalanceValue"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Your wallets"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

        <View
            android:id="@+id/bitcoin"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/home_your_wallets"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/home_bg"
            android:elevation="32dp" />

    <ImageView
        android:id="@+id/ic_bitcoin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/home_your_wallets"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_home_bank"
        android:translationZ="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_your_wallets"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/ic_bitcoin"
        android:text="Bank accounts"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationZ="90dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_your_wallets"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="31dp"
            android:text="3 435 €"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationZ="90dp" />

    <View
        android:id="@+id/ethereum"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/bitcoin"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/home_bg"
        android:elevation="32dp" />

    <ImageView
        android:id="@+id/ic_ethereum"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/bitcoin"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_home_crypto"
        android:translationZ="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bitcoin"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/ic_ethereum"
        android:text="Crypto wallet"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationZ="90dp" />

    <TextView
        android:id="@+id/home_crypto_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bitcoin"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="31dp"
        android:text="2 845.75 €"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationZ="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_crypto_amount"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:text="+2%"
        android:textColor="#219653"
        android:textSize="14sp"
        android:translationZ="90dp" />

        <View
            android:id="@+id/home_spred"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/ethereum"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/home_bg"
            android:elevation="32dp" />

    <ImageView
        android:id="@+id/solana"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/ethereum"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_home_spred"
        android:translationZ="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ethereum"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/ic_ethereum"
        android:text="Spred Coin"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationZ="90dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ethereum"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="31dp"
            android:text="1 000 €"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationZ="90dp" />

    <TextView
        android:id="@+id/home_recent_operations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_spred"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Recent operations"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

        <View
            android:id="@+id/home_operations"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/home_recent_operations"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/home_bg"
            android:elevation="32dp" />

    <ImageView
        android:id="@+id/ic_home_operation1_ic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/home_recent_operations"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_operation1"
        android:translationZ="90dp" />

        <TextView
            android:id="@+id/ic_home_operation1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_recent_operations"
            android:layout_marginStart="7dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/ic_home_operation1_ic"
            android:text="McDonald's"
            android:textColor="#000"
            android:textSize="13sp"
            android:translationZ="90dp" />

    <TextView
        android:id="@+id/ic_home_operation1_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_home_operation1_txt"
        android:layout_marginStart="7dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/ic_home_operation1_ic"
        android:text="21 April, 18:20"
        android:textColor="#858585"
        android:textSize="11sp"
        android:translationZ="90dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_recent_operations"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="31dp"
            android:text="-3,99 €"
            android:textColor="#000"
            android:textSize="14sp"
            android:translationZ="90dp" />

    <View
        android:id="@+id/line_operation"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ic_home_operation1_ic"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="#F5F5F5"
        android:translationZ="90dp" />

    <ImageView
        android:id="@+id/ic_home_operation2_ic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/line_operation"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_operation2"
        android:translationZ="90dp" />

    <TextView
        android:id="@+id/ic_home_operation2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_operation"
        android:layout_marginStart="7dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/ic_home_operation1_ic"
        android:text="Starbucks"
        android:textColor="#000"
        android:textSize="13sp"
        android:translationZ="90dp" />

    <TextView
        android:id="@+id/ic_home_operation2_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_home_operation2_txt"
        android:layout_marginStart="7dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/ic_home_operation1_ic"
        android:text="21 April, 08:34"
        android:textColor="#858585"
        android:textSize="11sp"
        android:translationZ="90dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_operation"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="31dp"
            android:text="-5,99 €"
            android:textColor="#000"
            android:textSize="14sp"
            android:translationZ="90dp" />

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>