<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@drawable/bg_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MerchantMainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="55dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/home_totalBalanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="Total balance"
                    android:textColor="#858585"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_totalBalanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_totalBalanceTextView"
                    android:layout_marginStart="16dp"
                    android:text="1 545 €"
                    android:textColor="#000"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_your_wallets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_totalBalanceValue"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Your wallets"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/bitcoin"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/home_your_wallets"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/home_bg"
                    android:elevation="32dp" />

                <ImageView
                    android:id="@+id/ic_bitcoin"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/home_your_wallets"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="26dp"
                    android:src="@drawable/ic_home_bank"
                    android:translationZ="90dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_your_wallets"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@+id/ic_bitcoin"
                    android:text="Bank accounts"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:translationZ="90dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_your_wallets"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="31dp"
                    android:text="1 245 €"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:translationZ="90dp" />

                <View
                    android:id="@+id/ethereum"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/bitcoin"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/home_bg"
                    android:elevation="32dp" />

                <ImageView
                    android:id="@+id/ic_ethereum"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/bitcoin"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="26dp"
                    android:src="@drawable/ic_home_crypto"
                    android:translationZ="90dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bitcoin"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@+id/ic_ethereum"
                    android:text="Crypto wallet"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:translationZ="90dp" />

                <TextView
                    android:id="@+id/home_crypto_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bitcoin"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="31dp"
                    android:text="2 000 €"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:translationZ="90dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_crypto_amount"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="31dp"
                    android:text="+2%"
                    android:textColor="#219653"
                    android:textSize="14sp"
                    android:translationZ="90dp" />

                <View
                    android:id="@+id/home_spred"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/ethereum"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/home_bg"
                    android:elevation="32dp" />

                <ImageView
                    android:id="@+id/solana"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/ethereum"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="26dp"
                    android:src="@drawable/ic_home_spred"
                    android:translationZ="90dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ethereum"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@+id/ic_ethereum"
                    android:text="Spred Coin"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:translationZ="90dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ethereum"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="31dp"
                    android:text="300 €"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:translationZ="90dp" />

                <View
                    android:id="@+id/terminal_button"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_below="@+id/home_spred"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/ic_done_button" />

                <TextView
                    android:id="@+id/textview_terminal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/terminal_button"
                    android:layout_alignBottom="@+id/terminal_button"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Terminal"
                    android:textColor="#000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_recent_operations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/terminal_button"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Recent operations"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/home_operations"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@+id/home_recent_operations"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/home_bg"
                    android:elevation="32dp" />

                <ImageView
                    android:id="@+id/ic_home_operation1_ic"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/home_recent_operations"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="26dp"
                    android:src="@drawable/ic_operation1"
                    android:translationZ="90dp" />

                <TextView
                    android:id="@+id/ic_home_operation1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_recent_operations"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="26dp"
                    android:layout_toEndOf="@+id/ic_home_operation1_ic"
                    android:text="Customer charge"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:translationZ="90dp" />

                <TextView
                    android:id="@+id/ic_home_operation1_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ic_home_operation1_txt"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@+id/ic_home_operation1_ic"
                    android:text="21 April, 18:20"
                    android:textColor="#858585"
                    android:textSize="11sp"
                    android:translationZ="90dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_recent_operations"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="31dp"
                    android:text="+3,99 €"
                    android:textColor="#219653"
                    android:textSize="14sp"
                    android:translationZ="90dp" />

                <View
                    android:id="@+id/line_operation"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/ic_home_operation1_ic"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="#F5F5F5"
                    android:translationZ="90dp" />

                <ImageView
                    android:id="@+id/ic_home_operation2_ic"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/line_operation"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_operation2"
                    android:translationZ="90dp" />

                <TextView
                    android:id="@+id/ic_home_operation2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_operation"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="16dp"
                    android:layout_toEndOf="@+id/ic_home_operation1_ic"
                    android:text="Customer charge"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:translationZ="90dp" />

                <TextView
                    android:id="@+id/ic_home_operation2_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ic_home_operation2_txt"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@+id/ic_home_operation1_ic"
                    android:text="21 April, 08:34"
                    android:textColor="#858585"
                    android:textSize="11sp"
                    android:translationZ="90dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_operation"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="31dp"
                    android:text="+5,99 €"
                    android:textColor="#219653"
                    android:textSize="14sp"
                    android:translationZ="90dp" />

            </RelativeLayout>

        </ScrollView>

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:itemIconTint="@drawable/menu_item_foreground"
        app:itemTextColor="@drawable/menu_item_foreground"
        app:menu="@menu/bottom_nav_menu_merchant"
        app:labelVisibilityMode="unlabeled"
        android:background="@drawable/nav_background_curved" />

</androidx.constraintlayout.widget.ConstraintLayout>